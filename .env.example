# MoneySplit Environment Configuration
# Copy this to .env and update values as needed

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=localhost
API_PORT=8000
API_RELOAD=true

# Frontend Configuration
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# CORS Settings (comma-separated)
CORS_ALLOW_ORIGINS=*

# ============================================================================
# Database Configuration
# ============================================================================
DB_PATH=example.db
DB_TIMEOUT=5

# ============================================================================
# Application Settings
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ============================================================================
# Monitoring & Metrics
# ============================================================================
METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=8001

# ============================================================================
# Environment
# ============================================================================
# Values: development, production, testing
ENVIRONMENT=development
