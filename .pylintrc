[MASTER]
# Add files or directories to the blacklist. They should be base names, not
# paths.
ignore=
    .git,
    __pycache__,
    htmlcov,
    .pytest_cache,
    node_modules,
    venv,
    frontend

# Set the output format. Available formats are text, parseable, colorized, msvs
# (visual studio) and custom. You can also give a reporter class e.g. mypackagename.mimodule.MyReporterClass -f parseable.
output-format=colorized

# Tells whether to display a full report or only the messages.
reports=yes

[DESIGN]
# Maximum number of arguments for function / method
max-args=5

# Maximum number of attributes for a class
max-attributes=7

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=12

# Maximum number of locals for function / method body
max-locals=15

# Maximum number of parents for a class (see R0901).
max-parents=7

# Maximum number of public methods for a class
max-public-methods=20

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of statements in function / method body
max-statements=50

# Minimum number of public methods for a class
min-public-methods=2

[FORMAT]
# Expected format of line ending, especially useful when checking scripts as
# they are prone to have the wrong line ending convention. This represents the
# line ending type to expect.
expected-line-ending-type=LF

# Regexp for a line that is allowed to be longer than the limit.
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

# Number of spaces of indentation required inside a block.
indent-after-paren=4

# String used as indentation unit. This is usually "    " (4 spaces) or "\t" (1
# tab).
indent-string='    '

# Maximum number of characters on a single line.
max-line-length=120

[MESSAGES CONTROL]
# Only show warnings with the listed confidence levels. Leave empty to show
# all. Valid levels: HIGH, INFERENCE, INFERENCE_FAILURE, UNDEFINED.
confidence=

# Disable the message, report, category or checker with the given id(s). You
# can either give multiple identifiers separated by comma (,) or put this
# option multiple times (only on the command line, not in the config file
# where it should appear only once). You can also use "--disable=all" to
# disable everything first and then reenable specific checks. For example, if
# you want to run only the similarities checker, you can use "--disable=all
# --enable=similarities". If you want to run only the classes checker, but have
# no Warning level messages displayed, use "--disable=all --enable=classes
# --disable=W".
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    consider-using-f-string,
    import-outside-toplevel,
    unused-variable,
    line-too-long,

[BASIC]
# Good variable names which should always be accepted, separated by a comma.
good-names=i,j,k,ex,Run,_,id,db,df,x,y

# Include a hint for the correct naming format with invalid-name.
include-naming-hint=no

[VARIABLES]
# List of additional names supposed to be defined in builtins. Remember that
# you should avoid to define new builtins when possible.
additional-builtins=

[LOGGING]
# Format of logging format string.
logging-format-style=old

[SPELLING]
# Limits count of emitted suggestions for spelling mistakes.
max-spelling-suggestions=4

# List of comma separated words that should be considered directives if they
# appear and the beginning of a comment, and should not be checked for
# misspellings.
spelling-ignore-comment-directives=fmt: on,fmt: off,noqa,pylint,isort,yapf

[SIMILARITIES]
# Ignore comments and docstrings when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

# Minimum lines number d a similarity to be considered a duplicate.
min-similarity-lines=4
